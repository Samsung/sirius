// Check styled label
with [get-view Properties | get-section Label | get-editbox -index 6] {
	get-property className | equals "org.eclipse.swt.custom.StyledText" | verify-true
	get-property enablement | equals false | verify-true
	get-property readOnly | equals false | verify-true
	get-property text | equals "Style Label Bold" | verify-true
}

// Check style value
